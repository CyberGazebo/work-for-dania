<Application x:Class="invokertrainer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:invokertrainer"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#454a53"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontFamily" Value="Droid Sans Mono"/>
            <Setter Property="Foreground" Value="DarkGray"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="FontFamily" Value="Droid Sans Mono"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Width" Value="175"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Foreground" Value="DarkGray"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Monaco"/>
            <Setter Property="Foreground" Value="DarkGray"/>
        </Style>
        <Style TargetType="Grid">
            <Setter Property="Background" Value="Black"/>
        </Style>
    </Application.Resources>
</Application>
